                			<li><a href="/login" class="w3-button w3-block w3-dark-grey">Sign In</a></li>
                			<li><a href="/logout" class="w3-button w3-block w3-dark-grey">Sign Out</a></li>
                		</ul>
                </div>
                            
                            
                <script>              
                         //  ------------ navbar menu mobile -----------
                $(document).ready(function(){
                	$("#flip").click(function(){
                		$("#navMenuDrop").slideToggle(500);
                	});
                });
                
                $(document).ready(function(){
                	$(document).scroll(function(){
                		$("#navMenuDrop").fadeOut(1500);
                		
                	});
                });
                
                </script>