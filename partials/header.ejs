        <body>
            
             <!-- Navigation -->
              <nav class="navbar navbar-light bg-light static-top">
                <div class="container">
                  <a class="navbar-brand" href="/">AudioNation</a>
                  <a class="py-2 d-none d-md-inline-block" href="/items">Items</a>
                  <a class="py-2 d-none d-md-inline-block" href="/social">Social</a>
                  <a class="py-2 d-none d-md-inline-block" href="/register">Register</a>
                  <a class="py-2 d-none d-md-inline-block" href="/profile">Your Account</a>
                  <a class="py-2 d-none d-md-inline-block" href="/login">Sign In</a>
                  <a class="py-2 d-none d-md-inline-block" href="/logout">Sign Out</a>
                  
                  <% if (typeof session.cart !== "undefined") { %>
                  <a class="glyphicon glyphicon-shopping-cart" href="/cart">Cart( 
                                <%= session.cart.totalItems %>
                                <% } else {%>
                               <a class="glyphicon glyphicon-shopping-cart" href="#">Cart( 0
                                <% } %>
                            )</a>
                   

                </div>
                
                
                         <!-- responsive menu -->	
        		<div>
        			<i id="flip" class="fa fa-bars w3-xlarge w3-button w3-theme" ></i> 
        			
        		</div>           
        	  
        	  
        	
                
              </nav>
                              
                <div id="navMenuDrop">
                		<ul style="list-style-type:none" >
                			<li><a href="/items" class="w3-button w3-block w3-dark-grey">Items</a></li>
                			<li><a href="/social" class="w3-button w3-block w3-dark-grey">Social</a></li>
                			<li><a href="/register" class="w3-button w3-block w3-dark-grey">Register</a></li>
